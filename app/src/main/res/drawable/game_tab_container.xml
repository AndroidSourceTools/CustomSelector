<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/game_tab_selected_bg" />

            <stroke
                android:width="@dimen/chart_interval_selector_border_width"
                android:color="@color/game_tab_selected_stroke" />

            <corners
                android:bottomLeftRadius="@dimen/graph_style_tab_corner_radius"
                android:bottomRightRadius="@dimen/graph_style_tab_corner_radius"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/game_cfd_tab_button_border"
        android:left="@dimen/game_cfd_tab_button_border"
        android:right="@dimen/game_cfd_tab_button_border"
        android:top="0dp">
        <shape>
            <solid android:color="@color/game_tab_empty_bg" />

            <corners
                android:bottomLeftRadius="@dimen/graph_style_tab_corner_radius"
                android:bottomRightRadius="@dimen/graph_style_tab_corner_radius"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />

        </shape>
    </item>

</layer-list>